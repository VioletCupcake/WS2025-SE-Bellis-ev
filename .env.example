# Database setup
# Copy this file to .env and fill in the values.
# The .env file is gitignored and should never be committed.


# DATABASE CONFIGURATION

DB_NAME=bev_dev
DB_USER=bev_user
DB_PASSWORD=<your_password>           # Default for dev: SE2025.bellis
DB_PORT=5432

# DB_HOST depends on your setup:
#   - Local development (PostgreSQL on your machine): localhost
#   - Docker Compose: db (this is the service name)
DB_HOST=localhost


# DJANGO SECURITY
# Generate a new key for production: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=<generate_new_secret_key>  # for us: django-insecure-j1_b8p3b5(o+@d+fy%i10ytq2bl*$o0p$$d+i!p%t64*mu=d1z

# Set to False in production!
DEBUG=True

